<%- include('partials/header', { title: title }) %>
<section class="space-y-4">
  <h2 class="text-2xl font-semibold text-blue-600">Cat√°logo de sillas</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    <% chairs.forEach(chair => { %>
      <article class="border border-slate-200 rounded-lg overflow-hidden bg-white shadow-sm">
        <div class="aspect-[4/3] bg-slate-50">
          <img class="w-full h-full object-cover" src="<%= chair.image %>" alt="<%= chair.name %>">
        </div>
        <div class="p-4 space-y-1">
          <h3 class="text-lg font-medium"><%= chair.name %></h3>
          <p class="text-slate-500"><%= chair.material %></p>
          <p class="font-semibold">$<%= chair.price.toFixed(2) %></p>
        </div>
      </article>
    <% }) %>
  </div>
</section>
<%- include('partials/footer') %>
